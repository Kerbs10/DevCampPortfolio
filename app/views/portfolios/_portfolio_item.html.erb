
<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%= portfolio_item.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
      	<% if logged_in?(:site_admin) %>
            <div class="btn-group">
            	<%= link_to "View", portfolio_show_path(portfolio_item), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-info" %>
			    <%= link_to "Delete", 
					portfolio_item, 
					method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
            </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
