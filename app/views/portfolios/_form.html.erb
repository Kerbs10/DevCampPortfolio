<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-4">  
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-8">  
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body , class: "form-control", rows: "10"%>
      </div>
      </div>
    <div class="col-md-12">  
      <ul>
        <%= form.fields_for :technologies do |technology_form| %>
          <li>
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="form-group"> 
    <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
  </div>
  
<% end %>