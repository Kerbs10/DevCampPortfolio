
<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <%= render 'shared/errors', obj: @portfolio_item  %>
  <div class="row">
    <div class="col-md-4">  
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>

      <div class="form-group">
        <label class="btn btn-success w-100">
          Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
        <label class="btn btn-success w-100">
          Upload a thumbnail image file <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
      <div class="form-group">

      </div>
    </div>

    <div class="col-md-8">  
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body , class: "form-control", rows: "10"%>
      </div>
    </div>
    <div class="col-md-12">  
      <h3>Technologies Used:</h3>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies, partial: 'technology_fields', form_name: 'f' %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group mt-3"> 
    <%= form.submit "Submit", class: "btn btn-primary w-10 btn-block" %>
  </div>
  
<% end %>